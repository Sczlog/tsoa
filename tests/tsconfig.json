{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2020"],
    "typeRoots": ["node_modules/@types", "./typings"],
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "newLine": "LF",
    "noEmit": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "paths": {
      "@smartx/tsoa-cli/*": ["../packages/cli/src/*"],
      "@smartx/tsoa-runtime/*": ["../packages/runtime/src/*"]
    }
  },
  "references": [{ "path": "../packages/runtime" }, { "path": "../packages/cli" }],
  "exclude": ["esm", "fixtures/**/routes.ts"],
  "ts-node": {
    "transpileOnly": true
  }
}
